---
interface Props {
  message: string;
  type?: 'info' | 'success' | 'warning' | 'error';
  dismissible?: boolean;
}

const { message, type = 'info', dismissible = false } = Astro.props;

const typeStyles = {
  info: { bg: '#e0f2fe', border: '#0284c7', text: '#0c4a6e', icon: 'i' },
  success: { bg: '#dcfce7', border: '#16a34a', text: '#14532d', icon: '✓' },
  warning: { bg: '#fef3c7', border: '#d97706', text: '#78350f', icon: '!' },
  error: { bg: '#fee2e2', border: '#dc2626', text: '#7f1d1d', icon: '✕' },
};

const style = typeStyles[type];
---

<div
  class="banner"
  style={`background: ${style.bg}; border-color: ${style.border}; color: ${style.text};`}
  role="alert"
>
  <span class="icon" style={`background: ${style.border};`}>
    {style.icon}
  </span>
  <span class="message">{message}</span>
  {dismissible && (
    <button class="dismiss" aria-label="Schließen">×</button>
  )}
</div>

<style>
  .banner {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    border-left: 4px solid;
    border-radius: 0 8px 8px 0;
    font-family: system-ui, sans-serif;
  }

  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    color: white;
    font-size: 12px;
    font-weight: bold;
    flex-shrink: 0;
  }

  .message {
    flex: 1;
    font-size: 0.9375rem;
    line-height: 1.4;
  }

  .dismiss {
    background: none;
    border: none;
    font-size: 1.25rem;
    cursor: pointer;
    opacity: 0.7;
    color: inherit;
    padding: 0;
    line-height: 1;
  }

  .dismiss:hover {
    opacity: 1;
  }
</style>
