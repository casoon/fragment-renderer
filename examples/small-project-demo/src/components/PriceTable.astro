---
interface PriceTier {
  name: string;
  price: string;
  features: string[];
  highlighted?: boolean;
  cta?: string;
}

interface Props {
  tiers: PriceTier[];
  title?: string;
}

const { tiers, title = 'Preise' } = Astro.props;
---

<section class="pricing">
  <h2>{title}</h2>
  <div class="pricing-grid">
    {tiers.map((tier) => (
      <div class={`pricing-card ${tier.highlighted ? 'highlighted' : ''}`}>
        <h3>{tier.name}</h3>
        <div class="price">{tier.price}</div>
        <ul>
          {tier.features.map((feature) => (
            <li>{feature}</li>
          ))}
        </ul>
        <button>{tier.cta || 'Ausw√§hlen'}</button>
      </div>
    ))}
  </div>
</section>

<style>
  .pricing {
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .pricing h2 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .pricing-card {
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
  }

  .pricing-card.highlighted {
    border-color: #3b82f6;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.15);
  }

  .pricing-card h3 {
    margin: 0 0 1rem;
  }

  .price {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }

  .pricing-card ul {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem;
  }

  .pricing-card li {
    padding: 0.5rem 0;
    border-bottom: 1px solid #f3f4f6;
  }

  .pricing-card button {
    width: 100%;
    padding: 0.75rem;
    background: #3b82f6;
    color: white;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
  }

  .pricing-card.highlighted button {
    background: #1d4ed8;
  }
</style>
