---
interface Props {
	title: string;
	description?: string;
	primaryText: string;
	primaryHref: string;
	secondaryText?: string;
	secondaryHref?: string;
	variant?: "default" | "dark" | "gradient";
}

const {
	title,
	description = "",
	primaryText,
	primaryHref,
	secondaryText = "",
	secondaryHref = "",
	variant = "default",
} = Astro.props;
---

<section class={`cta ${variant}`}>
  <div class="cta-content">
    <h2>{title}</h2>
    {description && <p>{description}</p>}

    <div class="cta-buttons">
      <a href={primaryHref} class="btn primary">
        {primaryText}
      </a>
      {secondaryText && secondaryHref && (
        <a href={secondaryHref} class="btn secondary">
          {secondaryText}
        </a>
      )}
    </div>
  </div>
</section>

<style>
  .cta {
    padding: 4rem 2rem;
    text-align: center;
  }

  .cta.default {
    background: #f8f9fa;
    color: #1a1a2e;
  }

  .cta.dark {
    background: #1a1a2e;
    color: white;
  }

  .cta.gradient {
    background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
    color: white;
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  h2 {
    font-size: 2.25rem;
    font-weight: 700;
    margin: 0 0 1rem;
  }

  p {
    font-size: 1.125rem;
    margin: 0 0 2rem;
    opacity: 0.8;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn.primary {
    background: #3b82f6;
    color: white;
  }

  .cta.gradient .btn.primary {
    background: white;
    color: #3b82f6;
  }

  .btn.primary:hover {
    background: #2563eb;
  }

  .cta.gradient .btn.primary:hover {
    background: #f0f0f0;
  }

  .btn.secondary {
    background: transparent;
    border: 2px solid currentColor;
    color: inherit;
  }

  .btn.secondary:hover {
    background: rgba(255, 255, 255, 0.1);
  }
</style>
